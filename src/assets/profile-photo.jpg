<script>
(function(){
  function isHiddenByAncestor(el){
    for (let p = el; p; p = p.parentElement){
      const cs = getComputedStyle(p);
      if (cs.display === 'none' || cs.visibility === 'hidden') return true;
    }
    return false;
  }
  function visibleWidth(el){
    if (!el || !el.isConnected) return 0;
    if (isHiddenByAncestor(el)) return 0;
    const rect = el.getBoundingClientRect();
    return rect.width || 0;
  }
  function tryPush(el, tries=0){
    // AdSense slotu işlenmişse tekrar denemeyelim
    if (el.dataset.adsbygoogleStatus === 'done') return;
    const w = visibleWidth(el);
    if (w > 0){
      try {
        (adsbygoogle = window.adsbygoogle || []).push({});
        return;
      } catch(e){
        // geçici bir durumsa kısa süre sonra tekrar dene
      }
    }
    if (tries > 120) return; // ~60sn sonra vazgeç
    setTimeout(() => tryPush(el, tries+1), 500);
  }
  function boot(){
    // Tüm slotları dolaş
    document.querySelectorAll('ins.adsbygoogle').forEach(tryPush);
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', boot);
  } else {
    boot();
  }
  // Pencere boyutu değişince görünür hale gelen slotları tekrar dene
  window.addEventListener('resize', () => {
    document.querySelectorAll('ins.adsbygoogle:not([data-adsbygoogle-status="done"])').forEach(tryPush);
  });
})();
</script>

