<script>
document.addEventListener('DOMContentLoaded', function () {
    const mainImage = document.getElementById('main-image');

    function showImageError(imageElement) {
        const figure = imageElement.closest('figure');
        if (figure) {
            figure.innerHTML = `
                <div class='image-load-error'>
                    <p>Görsel yüklenemedi.</p>
                    <button class='btn-secondary retry-load-btn' onclick="location.reload()">Tekrar Dene</button>
                </div>`;
        }
    }

    if (mainImage) {
        mainImage.addEventListener('error', () => showImageError(mainImage));
    }

    async function copyToClipboard(text, button) {
        const input = document.getElementById(button.dataset.target.substring(1));
        const statusEl = document.getElementById('copy-status');
        let success = false;
        try {
            await navigator.clipboard.writeText(text);
            success = true;
        } catch (err) {
            console.warn('Clipboard API başarısız, eski yönteme geçiliyor:', err);
            const textarea = document.createElement('textarea');
            textarea.value = text;
            textarea.style.position = 'fixed'; textarea.style.opacity = '0';
            document.body.appendChild(textarea);
            textarea.select();
            try { success = document.execCommand('copy'); }
            catch (fallbackErr) { success = false; }
            document.body.removeChild(textarea);
        }

        if (success) {
            if (input) input.classList.add('is-copied');
            const originalIcon = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.disabled = true;
            if (statusEl) statusEl.textContent = 'Bağlantı panoya kopyalandı.';
            // app.blade.php'deki global showToast fonksiyonu kullanılıyor
            if (window.showToast) window.showToast('Bağlantı kopyalandı!');

            setTimeout(() => {
                button.innerHTML = originalIcon;
                button.disabled = false;
                if (input) input.classList.remove('is-copied');
                if (statusEl) statusEl.textContent = '';
            }, 2000);
        } else {
            // app.blade.php'deki global showToast fonksiyonu kullanılıyor
            if (window.showToast) window.showToast('Otomatik kopyalama başarısız oldu. Lütfen manuel deneyin.', { isError: true });
        }
    }

    document.querySelectorAll('.copy-btn').forEach(button => {
        button.addEventListener('click', function () {
            const targetId = this.dataset.target;
            const input = document.querySelector(targetId);
            if (input) {
                input.select();
                copyToClipboard(input.value, this);
            }
        });
    });

    // Paylaşım Linki Sekmeleri
    const shareLinks = {
        direct: "https:\/\/i.hizliresim.com\/f4y5q5r.jpg",
        page: "https:\/\/hizliresim.com\/f4y5q5r",
        bbcode: "[url=https:\/\/hizliresim.com\/f4y5q5r][img]https:\/\/i.hizliresim.com\/f4y5q5r.jpg[\/img][\/url]",
        markdown: "[![H\u0131zl\u0131 Resim\u0027e y\u00fcklenen g\u00f6rsel: f4y5q5r.jpg}](https:\/\/i.hizliresim.com\/f4y5q5r.jpg)](https:\/\/hizliresim.com\/f4y5q5r)",
        dictionary: "[https:\/\/hizliresim.com\/f4y5q5r g\u00f6rsel]"    };
    const shareTabsContainer = document.querySelector('.share-tabs');
    const shareLinkInput = document.getElementById('share-link-input');

    if (shareTabsContainer && shareLinkInput) {
        shareTabsContainer.addEventListener('click', (e) => {
            if (e.target.matches('.share-tab-btn')) {
                const button = e.target;
                const type = button.dataset.type;

                shareTabsContainer.querySelector('.active').classList.remove('active');
                button.classList.add('active');

                if (shareLinks[type]) {
                    shareLinkInput.value = shareLinks[type];
                }
            }
        });
    }

    document.querySelectorAll('.social-btn').forEach(link => {
        const isWhatsapp = link.classList.contains('whatsapp');
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        if (isWhatsapp && !isMobile) {
            const url = new URL(link.href);
            const textParam = url.searchParams.get('text') || '';
            link.href = `https://web.whatsapp.com/send?text=${encodeURIComponent(textParam)}`;
        }
        link.addEventListener('click', function(e) {
            if (isWhatsapp && isMobile) return;
            e.preventDefault();
            const url = this.href;
            const w = 600, h = 400, l = (screen.width/2)-(w/2), t = (screen.height/2)-(h/2);
            const popup = window.open(url, '_blank', `width=${w},height=${h},top=${t},left=${l},scrollbars=yes,resizable=yes`);
            if (!popup && window.showToast) window.showToast('Paylaşım penceresi engellendi.', { isError: true });
        });
    });

    const lightboxOverlay = document.getElementById('lightbox-overlay');
    const lightboxImage = document.getElementById('lightbox-image');
    const lightboxClose = document.getElementById('lightbox-close');
    const lightboxSpinner = document.getElementById('lightbox-spinner');

    if (mainImage) {
        mainImage.addEventListener('click', () => {
            const imgSrc = mainImage.src;
            if (!imgSrc) return;

            lightboxOverlay.style.display = 'flex';
            document.body.style.overflow = 'hidden';

            if (lightboxImage.src === imgSrc) {
                 lightboxSpinner.style.display = 'none';
                 lightboxImage.style.display = 'block';
            } else {
                lightboxSpinner.style.display = 'block';
                lightboxImage.style.display = 'none';
                lightboxImage.src = imgSrc;
                lightboxImage.alt = mainImage.alt;
            }
        });

        lightboxImage.onload = () => {
            lightboxSpinner.style.display = 'none';
            lightboxImage.style.display = 'block';
        };
        lightboxImage.onerror = () => {
            closeLightbox();
            if (window.showToast) window.showToast('Görsel büyütülemedi.', { isError: true });
        };
    }

    const closeLightbox = () => {
        lightboxOverlay.style.display = 'none';
        document.body.style.overflow = '';
    };

    if (lightboxOverlay) lightboxOverlay.addEventListener('click', closeLightbox);
    if (lightboxClose) lightboxClose.addEventListener('click', (e) => {
        e.stopPropagation();
        closeLightbox();
    });
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightboxOverlay.style.display === 'flex') {
            closeLightbox();
        }
    });
});
</script>

