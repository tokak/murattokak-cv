        .feature-text p { color: #4b5563; line-height: 1.6; }

        /* "Nasıl Çalışır" */
        .how-it-works-grid { position: relative; display: grid; gap: 2rem; }
        @media (min-width: 768px) { .how-it-works-grid { grid-template-columns: repeat(3, 1fr); } }
        .step-card { 
            text-align: center; position: relative; opacity: 0;
            transform: translateY(20px); transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }
        .step-card.is-visible { opacity: 1; transform: translateY(0); }
        .step-number { 
            width: 3rem; height: 3rem; line-height: 3rem; border-radius: 50%; background-color: #fdf2f8; 
            color: var(--primary-color); font-weight: 700; font-size: 1.25rem; margin: 0 auto 1rem auto;
            transition: all 0.3s ease;
            display: flex; align-items: center; justify-content: center;
        }
        .step-card.is-visible .step-number {
            animation: pulse 2s infinite;
        }
        .step-card h3 { font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; }
        .step-card p { color: #6b7280; }
        
        @media (min-width: 768px) {
            .step-card:not(:last-child)::after {
                content: ''; position: absolute; top: 1.5rem; right: -25%; transform: translateY(-50%);
                width: 50%; height: 2px;
                background-repeat: no-repeat;
                background-image: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
                background-size: 0% 2px;
                background-position: left;
                z-index: -1;
            }
            .step-card.is-visible:not(:last-child)::after {
                animation: drawLine 0.8s forwards ease-out;
            }
        }
        @media (max-width: 767px) {
             .step-card:not(:last-child)::after {
                content: '\f063'; font-family: 'Font Awesome 6 Free';
                font-weight: 900; color: #e2e8f0; font-size: 1.5rem;
                display: block; margin: 1.5rem auto 0 auto;
             }
        }

        /* CTA */
        .cta-section { 
            padding: 3rem 1.5rem; 
            background: linear-gradient(90deg, var(--secondary-color) 0%, var(--primary-color) 100%); 
            border-radius: 1.5rem; 
            text-align: center; 
            color: white;
            position: relative;
            overflow: hidden;
        }
        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: -150%;
            width: 150%;
            height: 100%;
            background: linear-gradient(to right, transparent 0%, rgba(255,255,255,0.2) 50%, transparent 100%);
            transform: skewX(-25deg);
            animation: shimmer 5s infinite linear;
        }

        @media (min-width: 768px) { .cta-section { padding: 4rem 1.5rem; } }
        .cta-section h2 { font-size: 1.75rem; font-weight: 800; margin-bottom: 1rem; }
        @media (min-width: 768px) { .cta-section h2 { font-size: 2rem; } }
        .cta-section p { font-size: 1rem; opacity: 0.9; margin-bottom: 2rem; max-width: 35rem; margin-left: auto; margin-right: auto;}
        @media (min-width: 768px) { .cta-section p { font-size: 1.1rem; } }
        .cta-button {
            display: inline-block; background-color: white; color: var(--primary-color); padding: 1rem 2rem;
            border-radius: 0.75rem; font-weight: 600; text-decoration: none; transition: all 0.3s ease;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        .cta-button::before {
            content: '';
            position: absolute;
            top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            transition: 0.6s;
        }
        .cta-button:hover::before {
            left: 100%;
        }

        .turnstile-container { display: flex; justify-content: center; min-height: 65px; }
        
        /* Yükleme Ekranı */
        .loading-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            background: rgba(255, 255, 255, 0.9);
            display: flex; justify-content: center;
            align-items: center; z-index: 10001; flex-direction: column; gap: 1.5rem; color: #1f2937;
            font-size: 1.25rem; font-weight: 500; text-align: center;
        }
        @supports (backdrop-filter: blur(5px)) or (-webkit-backdrop-filter: blur(5px)) {
            .loading-overlay {
                background: rgba(255, 255, 255, 0.8);
                -webkit-backdrop-filter: blur(5px);
                backdrop-filter: blur(5px); 
            }
        }
        .spinner {
            width: 56px; height: 56px; border: 7px solid #fce7f3;
            border-top: 7px solid var(--primary-color); border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        /* Toast Bildirimi */
        .toast-notification {
            position: fixed; left: 50%; transform: translate(-50%, 150%); background-color: #1f2937;
            color: white; padding: 1rem 1.5rem; border-radius: 0.75rem;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1); display: flex; align-items: center;
            justify-content: space-between;
            gap: 1rem; z-index: 10000; transition: transform 0.4s ease-in-out; font-weight: 500;
            bottom: 2rem;
            max-width: calc(100% - 2rem);
        }
        @media (max-width: 640px) {
            .toast-notification {
                top: 2rem; bottom: auto;
                width: calc(100% - 2rem);
            }
        }
        .toast-notification.show { transform: translate(-50%, 0); }
        .toast-notification .icon { color: var(--success-color); }
        .toast-content { display: flex; align-items: center; gap: 0.75rem; }
        .toast-actions { display: flex; align-items: center; }
        #toast-undo-btn {
            background: none; border: none; color: var(--secondary-color); font-weight: 600; cursor: pointer;
            padding: 0.25rem 0.5rem; margin-left: 1rem; border-radius: 4px;
        }
        .toast-retry-btn {
            background: var(--secondary-color); color: white; font-size: 0.8rem;
            padding: 0.4rem 0.8rem; border-radius: 8px; margin-left: 1rem;
        }
        #toast-close-btn {
             background: none; border: none; color: #9ca3af; font-size: 1.25rem; cursor: pointer;
             line-height: 1; padding: 0.25rem 0.5rem; margin-left: 0.5rem;
        }
        @media (hover: hover) {
            #toast-undo-btn:hover, .toast-retry-btn:hover { text-decoration: underline; background: rgba(255,255,255,0.1);}
            #toast-close-btn:hover { color: white; }
        }
        
        /* Animasyonlar */
        @keyframes  spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        @keyframes  float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
        @keyframes  shake {
            10%, 90% { transform: translate3d(-1px, 0, 0); }
            20%, 80% { transform: translate3d(2px, 0, 0); }
            30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
            40%, 60% { transform: translate3d(4px, 0, 0); }
        }
        .animated-hand-icon {
            display: inline-block;
            animation: wave-animation 2.5s infinite;
            transform-origin: 70% 70%;
            margin-left: 8px;
            color: var(--primary-color);
        }
        @keyframes  wave-animation {
            0% { transform: rotate( 0.0deg) }
           10% { transform: rotate(14.0deg) }
           20% { transform: rotate(-8.0deg) }
           30% { transform: rotate(14.0deg) }
           40% { transform: rotate(-4.0deg) }
           50% { transform: rotate(10.0deg) }
           60% { transform: rotate( 0.0deg) }
          100% { transform: rotate( 0.0deg) }
        }
        .animated-rocket {
            display: inline-block;
            animation: float 3s ease-in-out infinite;
        }
        @keyframes  pulse {
            0% { box-shadow: 0 0 0 0 rgba(224, 40, 140, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(224, 40, 140, 0); }
            100% { box-shadow: 0 0 0 0 rgba(224, 40, 140, 0); }
        }
        @keyframes  drawLine {
            from { background-size: 0% 2px; }
            to { background-size: 100% 2px; }
        }
        @keyframes  shimmer {
            0% { left: -150%; }
            100% { left: 150%; }
        }
        
        @media (prefers-reduced-motion: reduce) {
            .animated-hand-icon, .dropzone-icon-container, .spinner, .dropzone.invalid, .animated-rocket, .step-card.is-visible .step-number, .feature-item, .cta-section::before { 
                animation: none; 
                transition: none;
            }
        }


        /* Yardımcı Sınıflar */
        .hidden, .d-none { display: none !important; }
        .sr-only {
            position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px;
            overflow: hidden; clip: rect(0, 0, 0, 0); white-space: nowrap; border-width: 0;
        }

        /* Windows High Contrast Mode Desteği */
        @media (forced-colors: active) {
            .card, .btn-primary, .form-input, .form-select, .advanced-settings {
                border: 2px solid ButtonText;
                box-shadow: none;
                background: Canvas;
