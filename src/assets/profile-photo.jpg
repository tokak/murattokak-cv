/* REKLAM ALANLARI - NİHAİ, ESNEK VE GÜVENLİ YAPI */

/* 1. Ana Reklam Konteyneri */
.ad-masthead {
  position: relative;         /* İçindeki reklamı konumlandırmak için */
  overflow: hidden;           /* Her türlü taşmayı %100 engellemek için */
  width: 100%;
  max-width: 970px;           /* Desktop max genişliği */
  margin: 0 auto 2rem auto;
  background-color: #f0f0f0;  /* Reklam yüklenene kadar boşluğu doldurur */
  
  /* Desktop için en-boy oranı (970x250) ile CLS önle */
  aspect-ratio: 970 / 250;
  min-height: 90px;           /* aspect-ratio desteklemeyen tarayıcılar için güvence */
}

/* 2. Tablet Görünümü (Ekran 991px'den daraldığında) */
@media (max-width: 991px) {
  .ad-masthead {
    max-width: 728px;
    aspect-ratio: 728 / 90; /* 728x90 reklam oranına geç */
  }
}

/* REKLAM ALANI İÇİN MOBİL VİDEO DÜZELTMESİ (16:9 Oranı) */
@media (max-width: 480px) {
    .ad-masthead {
        position: relative;
        /* Yüksekliği genişliğe göre 16:9 oranında otomatik ayarla */
        aspect-ratio: 16 / 9;
        
        /* Diğer kuralları temizle ve düzenle */
        height: auto;
        min-height: unset; /* aspect-ratio ile çakışmaması için kaldırıldı */
        overflow: hidden; /* Bu, kenarlardan taşmaları önlemek için kalmalı */
		margin: 5px;
    }

    /* Google reklamının (iframe dahil) bu yeni alana tam oturmasını sağla */
    .ad-masthead > ins.adsbygoogle,
    .ad-masthead > ins.adsbygoogle > div,
    .ad-masthead > ins.adsbygoogle iframe {
        position: absolute !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        height: 100% !important;
    }
}

/* 4. Google Reklamını Bu Konteynere Sığmaya Zorla */
.ad-masthead > ins.adsbygoogle {
