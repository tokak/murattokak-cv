                    const submitBtn = document.getElementById('remote-upload-send');
                    const formData = new FormData(remoteUploadForm);

                    const turnstileWidget = document.getElementById('ts-remote');
                    if (turnstileWidget && turnstileWidget.dataset.tsId && window.turnstile) {
                        const token = window.turnstile.getResponse(turnstileWidget.dataset.tsId);
                        if (!token) {
                            return showToast('Lütfen güvenlik doğrulamasını tamamlayın.', { isError: true });
                        }
                        formData.append('cf-turnstile-response', token);
                    } else if ("0x4AAAAAAAOgsz60uyAdcScl") {
                        return showToast('Güvenlik bileşeni yüklenemedi, lütfen sayfayı yenileyin.', { isError: true });
