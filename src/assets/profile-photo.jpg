    /* Proje genelinde tutarlılık sağlamak için ana renk değişkenleri tanımlandı.
       Bu blok, ana CSS dosyanıza veya layout'unuzun <head> bölümüne taşınabilir.
     */
    :root {
        --primary-color: #E0288C;
        --primary-hover: #c7247c; /* Hover için biraz daha koyu bir ton */
    }

    .site-footer {
        background-color: #f1f5f9; /* Ana sayfadaki açık gri tonu */
        color: #475569; /* Okunabilir bir metin rengi */
        padding: 4rem 0;
        font-family: 'Inter', sans-serif;
        border-top: 1px solid #e2e8f0;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2.5rem;
    }

    /* İyileştirme: CSS Grid desteklemeyen çok eski tarayıcılar için basit bir Flexbox fallback'i. */
    @supports  not (display: grid) {
        .footer-grid {
            display: flex;
            flex-wrap: wrap;
        }
        .footer-grid > div,
        .footer-grid > nav {
            width: 100%;
            margin-bottom: 2rem;
        }
    }

    .footer-about .footer-logo {
        max-width: 150px;
        margin-bottom: 1rem;
    }

    .footer-about p {
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .social-links {
        display: flex;
        flex-wrap: wrap; /* İyileştirme: Çok küçük ekranlarda (örn. iPhone SE) ikonların sığması için eklendi. */
        gap: 0.75rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        min-width: 40px; /* Dokunma hedefi boyutu */
        height: 40px;
        min-height: 40px; /* Dokunma hedefi boyutu */
        background-color: #e2e8f0;
        color: #475569;
        border-radius: 50%;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
        will-change: transform, background-color; /* İyileştirme: Animasyon performansını artırır. */
        font-size: 1.1rem;
    }
    
    .footer-heading {
        font-size: 1.1rem;
        font-weight: 600;
