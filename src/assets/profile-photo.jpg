                         if (window.turnstileReady) window.renderIfNeeded('#ts-remote');
                         turnstileRenderedForUrl = true;
                    }
                } else {
                    document.getElementById('url').value = '';
                    clearInlineError('url');
                    if (window.turnstile) {
                      const remoteContainer = document.getElementById('ts-remote');
                      const widgetId = remoteContainer ? remoteContainer.dataset.tsId : null;
                      if (widgetId && turnstileWidgets[widgetId]) {
                          if(window.turnstile.remove) window.turnstile.remove(widgetId);
                          delete turnstileWidgets[widgetId];
                          remoteContainer.removeAttribute('data-ts-id');
                          remoteContainer.innerHTML = '';
                      }
                  }
                }
            };

            document.querySelectorAll('.mode-switcher-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetMode = e.currentTarget.getAttribute('data-mode');
                    switchMode(targetMode);
                });
            });

            document.querySelectorAll('.password-toggle-btn').forEach(btn => {
                const input = btn.closest('.form-field-wrapper').querySelector('input[type="password"]');
                if(input) input.classList.add('has-toggle-btn');
                btn.addEventListener('click', () => {
                    const icon = btn.querySelector('.toggle-icon');
                    const isCurrentlyPassword = input.type === 'password';
                    
                    input.type = isCurrentlyPassword ? 'text' : 'password';
                    btn.setAttribute('aria-pressed', isCurrentlyPassword ? 'true' : 'false');
                    btn.setAttribute('aria-label', isCurrentlyPassword ? 'Şifreyi gizle' : 'Şifreyi göster');
                    if (icon) {
                        icon.classList.toggle('fa-eye', isCurrentlyPassword);
                        icon.classList.toggle('fa-eye-slash', !isCurrentlyPassword);
                    }
                });
            });
            
            const accordion = document.getElementById('advanced-settings-wrapper');
            if (accordion) {
                const summary = accordion.querySelector('.advanced-settings-summary');
                const content = accordion.querySelector('.advanced-settings-content');
                const toggleAccordion = () => {
                    const isOpen = accordion.classList.toggle('is-open');
                    summary.setAttribute('aria-expanded', isOpen);
                    content.setAttribute('aria-hidden', !isOpen);
                    content.style.maxHeight = isOpen ? content.scrollHeight + 'px' : '0px';
                }
                summary.addEventListener('click', toggleAccordion);
                summary.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.code === 'Space') {
                        e.preventDefault();
                        toggleAccordion();
                    }
                });
            }

            window.addEventListener('popstate', () => loadingOverlay.classList.add('hidden'));

            const animatedElements = document.querySelectorAll('.step-card, .feature-item');
            if ('IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach((entry, index) => {
                        if (entry.isIntersecting) {
                            const delay = entry.target.classList.contains('step-card') ? index * 150 : index * 100;
                            setTimeout(() => {
                                entry.target.classList.add('is-visible');
                            }, delay);
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });

                animatedElements.forEach(el => {
                    observer.observe(el);
                });
            } else {
                animatedElements.forEach(el => el.classList.add('is-visible'));
            }
        });

        const turnstileWidgets = {};
        window.renderIfNeeded = function(selector) {
            const el = document.querySelector(selector);
            if (!el || !window.turnstile || el.offsetParent === null) return;
            const widgetId = el.dataset.tsId;

            if (widgetId && turnstileWidgets[widgetId]) {
                try { window.turnstile.reset(widgetId); } catch (e) {
                   if(window.turnstile.remove) window.turnstile.remove(widgetId);
                   delete turnstileWidgets[widgetId];
                   el.removeAttribute('data-ts-id');
                   el.innerHTML = '';
                   window.renderIfNeeded(selector);
                }
                return;
            }
            const newWidgetId = window.turnstile.render(el, {
                sitekey: "0x4AAAAAAAOgsz60uyAdcScl",
                theme: 'auto'
            });
            el.dataset.tsId = newWidgetId;
            turnstileWidgets[newWidgetId] = true;
        }
    })();
