                    submitBtn.innerHTML = `<span class="spinner" style="width: 1rem; height: 1rem; border-width: 2px;"></span> Yükleniyor...`;

                    loadingOverlay.classList.remove('hidden');
                    manageFocusTrap(true);
                    loadingText.textContent = 'Gönderiliyor...';

                    const retryRemoteUpload = () => remoteUploadForm.dispatchEvent(new Event('submit', { cancelable: true }));
                    uploadWithProgress('/remote-image-upload', formData, remoteUploadForm)
                        .then(data => {
                            handleApiResponse(data, remoteUploadForm, retryRemoteUpload);
                        });
                });
            }
            
            const switchMode = (targetMode, options = {}) => {
                document.querySelectorAll('.upload-mode-content').forEach(mode => mode.classList.toggle('hidden', mode.id !== `upload-from-${targetMode}`));

                if (targetMode === 'web') {
                    turnstileRenderedForUrl = false;
                    clearFileStore(false);
                    const urlInput = document.getElementById('url');
                    urlInput.focus();
                    if (options.pasteUrl) {
                        urlInput.value = options.pasteUrl;
